# Environment variables for the application
APP_ENV=development
APP_DEBUG=false
APP_NAME="MKIT API"
API_V1_PREFIX="/api/v1"

PORT=8000
# Async driver (asyncpg) - recomendado para FastAPI async
DATABASE_URL=postgresql+asyncpg://user:pass@db:5432/databse
# Sync driver (psycopg2) - alternativa s√≠ncrona
# - DATABASE_URL=postgresql+psycopg2://${DB_USER:-appuser}:${DB_PASSWORD:-apipass}@db:5432/${DB_NAME:-apidb}
PYTHONPATH=/srv

# Database configuration
DB_HOST=db
DB_PORT=5432
DB_USER=user
DB_PASSWORD=pass
DB_NAME=database